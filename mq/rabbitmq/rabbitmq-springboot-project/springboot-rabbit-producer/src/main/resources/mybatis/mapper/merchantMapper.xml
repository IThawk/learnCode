<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ithawk.demo.rabbitmq.springboot.producer.mapper.MerchantMapper" >

    <resultMap id="BaseResultMap" type="com.ithawk.demo.rabbitmq.springboot.producer.entity.Merchant" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="address" property="address" jdbcType="VARCHAR" />
        <result column="account_no" property="accountNo" jdbcType="VARCHAR" />
        <result column="account_name" property="accountName" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="VARCHAR" />
    </resultMap>

    <select id="getMerchantList" resultMap="BaseResultMap"  >
      SELECT id, name, address, account_no, account_name,state FROM merchant WHERE  1=1
        AND NAME LIKE concat(concat('%',#{name}),'%')
        order by id
       limit #{page},#{limit}
    </select>


    <select id="getMerchantCount"   resultType="java.lang.Integer">
        select count(id) count from merchant
    </select>

    <select id="getMerchantById" parameterType="java.lang.Integer" resultMap="BaseResultMap" >
        SELECT * FROM merchant WHERE id = #{id}
    </select>

    <insert id="add" parameterType="Merchant" >
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO
        merchant
        (id, name, address, account_no, account_name, state)
        VALUES
        (#{id}, #{name}, #{address}, #{accountNo}, #{accountName}, #{state})
    </insert>

    <update id="update" parameterType="Merchant" >
        UPDATE
        merchant
        SET
        name = #{name},address = #{address} ,account_name = #{accountNo} ,account_name = #{accountName}, state = #{state}
        WHERE
        id = #{id}
    </update>

    <update id="updateState" parameterType="Merchant" >
        UPDATE
        merchant
        SET state = #{state}
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer" >
        DELETE FROM
        merchant
        WHERE
        id = #{id}
    </delete>
</mapper>